{{~ #*inline "page"}}
<div class="container chapter">
    <nav class="top-nav">
        <a href="{{links.books.url}}">
            <img src="/static/img/bible.rs.svg" alt="{{links.books.label}}" height="100" width="100" class="logo">
        </a>
    </nav>
    <article>
        <div class="heading">
            <nav class="previous">
                {{~ #if links.previous}}
                <a href="{{links.previous.url}}" title="{{links.previous.label}}">Previous</a>
                {{~ /if}}
            </nav>
            <h1>{{reference_string}}</h1>
            <nav class="next">
                {{~ #if links.next}}
                <a href="{{links.next.url}}" title="{{links.next.label}}">Next</a>
                {{~ /if}}
            </nav>
        </div>
        {{~ #each verses as |v|}}
        <p id="v{{v.verse}}">
            <a href="{{@root.data.links.current.url}}#v{{v.verse}}">
                {{~ v.verse ~}}
            </a>
            {{v.words}}
        </p>
        {{~ /each}}
    </article>
    <nav class="bottom-nav">
        {{~ #if reference.verses}}
        <p><a href="{{links.chapter.url}}">View Full Chapter</a></p>
        {{~ /if}}
        <p><a href="{{links.book.url}}">{{links.book.label}}</a></p>
    </nav>
</div>
{{~ /inline}}
{{~> base ~}}
